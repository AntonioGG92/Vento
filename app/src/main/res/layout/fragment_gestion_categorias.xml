<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Campo para el nombre de la categoría -->
    <EditText
        android:id="@+id/etNombreCategoria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre de la categoría"
        android:layout_marginBottom="8dp" />

    <!-- Campo para la descripción de la categoría -->
    <EditText
        android:id="@+id/etDescripcionCategoria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descripción de la categoría"
        android:layout_marginBottom="16dp" />

    <!-- Botón para agregar categoría -->
    <Button
        android:id="@+id/btnAgregarCategoria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agregar Categoría"
        android:layout_marginBottom="16dp" />

    <!-- Botón para eliminar categoría -->
    <Button
        android:id="@+id/btnEliminarCategoria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Eliminar Categoría"
        android:layout_marginBottom="16dp" />

    <!-- Botón para volver -->
    <Button
        android:id="@+id/btnVolver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Volver"
        android:layout_marginBottom="16dp" />

    <!-- RecyclerView para mostrar categorías -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerCategorias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
