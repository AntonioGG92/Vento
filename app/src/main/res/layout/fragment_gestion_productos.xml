<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Título -->
    <TextView
        android:id="@+id/tvTituloGestionProductos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/titulo_gestion_productos"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- EditText para Nombre del Producto -->
    <EditText
        android:id="@+id/etNombreProducto"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="@string/hint_nombre_producto"
        android:inputType="text"
        android:autofillHints="username" />

    <!-- EditText para Precio del Producto -->
    <EditText
        android:id="@+id/etPrecioProducto"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="@string/hint_precio_producto"
        android:inputType="numberDecimal"
        android:autofillHints="postalCode" />

    <!-- EditText para Descripción del Producto -->
    <EditText
        android:id="@+id/etDescripcionProducto"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="@string/hint_descripcion_producto"
        android:inputType="textMultiLine"
        android:lines="3"
        android:gravity="top"
        android:autofillHints="none" />

    <!-- EditText para Nombre del Producto a Eliminar -->
    <EditText
        android:id="@+id/etNombreProductoEliminar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Nombre del producto a eliminar"
        android:inputType="text"
        android:layout_marginTop="8dp" />

    <!-- Botón para Agregar Producto -->
    <Button
        android:id="@+id/btnAgregarProducto"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="@string/btn_agregar_producto"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@android:color/white"
        android:layout_marginTop="8dp" />

    <!-- Botón para Eliminar Producto -->
    <Button
        android:id="@+id/btnEliminarProducto"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="@string/btn_eliminar_producto"
        android:backgroundTint="@color/colorPrimaryDark"
        android:textColor="@android:color/white"
        android:layout_marginTop="8dp" />

    <!-- Botón para Volver -->
    <Button
        android:id="@+id/btnVolver"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="@string/btn_volver"
        android:backgroundTint="@color/colorSecondary"
        android:textColor="@android:color/white"
        android:layout_marginTop="16dp" />

    <!-- RecyclerView para Mostrar Productos -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerProductos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="200dp" />
</LinearLayout>
