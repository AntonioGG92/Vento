<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- EditText para Nombre de la Categoría -->
    <EditText
        android:id="@+id/etNombreCategoria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_nombre_categoria"
        android:inputType="text"
        android:layout_marginBottom="8dp" />

    <!-- EditText para Descripción de la Categoría -->
    <EditText
        android:id="@+id/etDescripcionCategoria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_descripcion_categoria"
        android:inputType="textMultiLine"
        android:gravity="top"
        android:lines="3"
        android:layout_marginBottom="16dp" />

    <!-- Botón para Agregar Categoría -->
    <Button
        android:id="@+id/btnAgregarCategoria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_agregar_categoria"
        android:layout_marginBottom="8dp" />

    <!-- Botón para Eliminar Categoría -->
    <Button
        android:id="@+id/btnEliminarCategoria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_eliminar_categoria"
        android:layout_marginBottom="16dp" />

    <!-- Botón para Volver -->
    <Button
        android:id="@+id/btnVolver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_volver"
        android:layout_marginBottom="16dp" />

    <!-- RecyclerView para Mostrar Categorías -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerCategorias"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="16dp" />

    <!-- Botón para Gestionar Productos -->
    <Button
        android:id="@+id/btnGestionProductos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_gestion_productos"
        android:layout_marginBottom="8dp" />

    <!-- Botón para Gestionar Categorías -->
    <Button
        android:id="@+id/btnGestionCategorias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_gestion_categorias" />

</LinearLayout>
